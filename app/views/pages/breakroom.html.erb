<div class="container breakroom_lookup center" style="margin-top: 30px;">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @referrers.count == 0 %>
        <small>Sorry, this email has no referrals.
        <br />
        If it's my mistake, send me an email at <a href="mailto:phil@the-dwc.co">phil@the-dwc.co</a></small>
      <% else %>
        <% @referrers.each do |referrer| %>
          <% if referrer.email == "none" %>

          <% else %>
            <table class="table">
              <thead>
                <tr>
                  <th style="text-align: center;">Email</th>
                  <th style="text-align: center;">Referrals</th>
                  <th style="text-align: center;">Breakroom</th>
                  <th style="text-align: center;">Last Updated</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= referrer.email %></td>
                  <td><%= referrer.referrals %></td>
                  <td>
                    <% if referrer.breakroom %>
                      <span class="fa fa-check-circle" style="color: #1abc9c;"></span>
                    <% else %>
                      <span class="fa fa-times-circle" style="color: #e74c3c;"></span>
                    <% end %>
                  </td>
                  <td><%= referrer.updated_at.strftime("%m/%d/%y")  %></td>
                </tr>
              </tbody>
            </table>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
