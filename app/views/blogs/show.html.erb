<div class="container">
	<p id="notice"><%= notice %></p>

	<%= link_to blogs_path do %>
		<i class="fa fa-long-arrow-left"> Back</i>
	<% end %>
	<% if user_signed_in? %>
		| <%= link_to 'Edit', edit_blog_path(@blog) %>
	<% end %>
	<br /><br />

	<%= @blog.date.strftime("%B %e, %Y") %>
	<h1 class="raleway"><%= @blog.title %></h1>
	<h4><%= @blog.subtitle %></h4>
	<p style="margin-top: 60px;">
		<%= @blog.content %>
	</p>

</div>