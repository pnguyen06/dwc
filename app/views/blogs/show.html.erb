<div class="container">
	<p id="notice"><%= notice %></p>

	<% if user_signed_in? %>
    <div class="admin-control">
      <%= link_to edit_blog_path(@blog), class: "fa-stack fa-lg" do %>
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
      <% end %>
    </div>
  <% end %>

  <div class="row">
  	<div class="col-md-8 col-md-offset-2">
			<%= link_to blogs_path do %>
				<i class="fa fa-long-arrow-left"> Back</i>
			<% end %>
			<br /><br />

			<%= @blog.date.strftime("%B %e, %Y") %>
			<h1 class="raleway"><%= @blog.title %></h1>
			<h3><%= @blog.subtitle %></h3>
			<p style="margin-top: 60px; font-size: 18px; line-height: 2;">
				<%= @blog.content.html_safe %>
			</p>
		</div>
	</div>

</div>