<div class="container" style="background-color: #fff;">
	<p id="notice"><%= notice %></p>

	<% if user_signed_in? %>
    <div class="admin-control">
      <%= link_to edit_archive_path(@archive), class: "fa-stack fa-lg" do %>
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
      <% end %>
    </div>
  <% end %>

	<div class="row" style="margin-bottom: 15px;">
	<div class="col-md-8 col-md-offset-2">
		<%= link_to archives_path do %>
			<i class="fa fa-long-arrow-left"> Back</i>
		<% end %>
		<br /><br />
		<small class="cabin"><%= @archive.date.strftime("%A %B %e, %Y").upcase %></small>
		<h2 class="cabin" style="text-align: left;"><%= @archive.title.upcase %></h2>
		<br />
		<%= @archive.code.html_safe %>
	</div>
</div>

</div>