<div class="container">
 <% if user_signed_in? %>
    <div class="admin-control">
      <%= link_to new_archive_path, class: "fa-stack fa-lg" do %>
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-plus fa-stack-1x fa-inverse"></i>
      <% end %>
    </div>
  <% end %>
  <h1>Archives</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
      </tr>
    </thead>
    <tbody>
      <% @archives.each do |archive| %>
        <tr>
          <td><%= archive.date.strftime("%m/%d/%y") %></td>
          <td><%= link_to archive.title, archive %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
