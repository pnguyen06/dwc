<div class="container">
  <% if user_signed_in? %>
    <button type="button" class="btn btn-default"><%= link_to 'New Archive', new_archive_path %></button>
  <% end %>
  <h1>Archives</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
      </tr>
    </thead>
    <tbody>
      <% @archives.each do |archive| %>
        <tr>
          <td><%= archive.date.strftime("%m/%d/%y") %></td>
          <td><%= link_to archive.title, archive %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
